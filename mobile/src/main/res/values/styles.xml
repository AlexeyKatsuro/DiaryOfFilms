<resources>

    <!-- Base application theme. -->
    <style name="Theme.DOF" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="chipRatingStyle">@style/Widget.DOF.RatingChip.Unelevated</item>
        <item name="toolbarStyle">@style/Widget.DOF.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.DOF.AppBarLayout</item>
    </style>

    <style name="Theme.DOF.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.DOF.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeOverlay.DOF.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.DOF" parent="@android:style/Widget" />

    <style name="Widget.DOF.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox" />

    <style name="Widget.DOF.Button" parent="Widget.MaterialComponents.Button" />
    <style name="Widget.DOF.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton" />
    <style name="Widget.DOF.Button.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton" />


    <style name="Widget.DOF.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:theme">@style/ThemeOverlay.DOF.AppBarOverlay</item>
        <item name="android:popupTheme">@style/ThemeOverlay.DOF.PopupOverlay</item>
    </style>

    <style name="Widget.DOF.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    </style>

    <style name="Widget.DOF.Switch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?colorSecondaryVariant</item>
        <item name="colorAccent">?attr/colorSecondary</item>
    </style>

    <style name="Widget.DOF.HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <style name="Widget.DOF.RatingChip" parent="android:Widget">
        <item name="android:background">@drawable/rating_chip_bg</item>
        <item name="chip_rating_padding">@dimen/chip_rating_padding</item>
        <item name="chip_rating_corner_radius">@dimen/chip_rating_corner_radius</item>
        <item name="chip_rating_stroke_width">@dimen/chip_rating_stroke_width</item>
        <item name="chip_rating_text_color">@null</item>
        <item name="chip_rating_background_color">@null</item>
        <item name="chip_rating_stroke_color">?attr/colorPrimary</item>
        <item name="android:textColor">?chip_rating_text_color</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>

    </style>

    <style name="Widget.DOF.RatingChip.Outline">
        <item name="chip_rating_text_color">?attr/colorPrimary</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
    </style>

    <style name="Widget.DOF.RatingChip.Unelevated">
        <item name="chip_rating_text_color">?attr/colorOnPrimary</item>
        <item name="chip_rating_background_color">?attr/colorPrimary</item>
    </style>

</resources>
