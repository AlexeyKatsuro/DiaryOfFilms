<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/HistoryFragment">

    <fragment
        android:id="@+id/HistoryFragment"
        android:name="com.alexeykatsuro.diaryofilms.ui.history.HistoryFragment"
        android:label="HistryFragment"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/showAdoptFilmFragment"
            app:destination="@id/adoptFilmFragment" />
        <action
            android:id="@+id/showSampleFragment"
            app:destination="@id/sampleFragment" />
    </fragment>

    <fragment
        android:id="@+id/adoptFilmFragment"
        android:name="com.alexeykatsuro.diaryofilms.ui.adoptfilm.AdoptFilmFragment"
        android:label="AdoptFilmFragment"
        tools:layout="@layout/fragment_adopt_film" />
    <fragment
        android:id="@+id/sampleFragment"
        android:name="com.alexeykatsuro.diaryofilms.ui.sample.SampleFragment"
        android:label="SampleFragment" />
</navigation>
